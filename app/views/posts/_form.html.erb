<%= form_for(@post) do |f| %>
    <div class="field">
        <%= f.label :category %>
        <%= select("post", "category_id", Category.find(:all).collect{ |c| [ c.name, c.id] }) %>
    </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows=>"20", :cols=>"70" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
